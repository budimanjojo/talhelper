; https://editorconfig.org/

; top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
; my custom property that trim trailing empty last lines
trim_trailing_lastline = true

[*.go]
indent_style = tab
indent_size = 4

[{*.just,*.justfile}]
indent_size = 2
